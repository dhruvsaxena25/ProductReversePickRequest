# Application
APP_NAME=Barcode Scanner API
APP_ENV=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./storage/db/warehouse.db

# JWT
JWT_SECRET_KEY=change-this-in-production
